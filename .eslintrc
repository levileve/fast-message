{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "no-param-reassign": "off",
    "max-len": [
      "error",
      200
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": [
          "if",
          "for",
          "while",
          "block-like",
          "block"
        ],
        "next": "*"
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": [
          "if",
          "for",
          "while",
          "block-like",
          "block"
        ]
      }
    ],
    "padded-blocks": [
      "error",
      {
        "switches": "always"
      }
    ]
  },
  "plugins": [
    "babel"
  ]
}